<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kurnniawan.adminmanajemenpemesanan.UpdateStockActivity">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="daftar stok menu"
        android:textAllCaps="true"
        android:textSize="25sp"
        android:textColor="#000"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/menu"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:text="1."
                android:textSize="18sp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Mie Ayam"
                android:textSize="18sp"
                android:textColor="#000"/>
            <RadioGroup
                android:id="@+id/rg1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb1_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TERSEDIA" />
                <RadioButton
                    android:id="@+id/rb1_2"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HABIS"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:text="2."
                android:textSize="18sp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Mie Ayam Baso"
                android:textSize="18sp"
                android:textColor="#000"/>
            <RadioGroup
                android:id="@+id/rg2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb2_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TERSEDIA"/>
                <RadioButton
                    android:id="@+id/rb2_2"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HABIS"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:text="3."
                android:textSize="18sp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Mie Ayam Pangsit"
                android:textSize="18sp"
                android:textColor="#000"/>
            <RadioGroup
                android:id="@+id/rg3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb3_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TERSEDIA"/>
                <RadioButton
                    android:id="@+id/rb3_2"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HABIS"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:text="4."
                android:textSize="18sp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Mie Ayam Jamur"
                android:textSize="18sp"
                android:textColor="#000"/>
            <RadioGroup
                android:id="@+id/rg4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb4_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TERSEDIA"/>
                <RadioButton
                    android:id="@+id/rb4_2"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HABIS"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:text="5."
                android:textSize="18sp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Mie Ayam Komplit"
                android:textSize="18sp"
                android:textColor="#000"/>
            <RadioGroup
                android:id="@+id/rg5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb5_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TERSEDIA"/>
                <RadioButton
                    android:id="@+id/rb5_2"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HABIS"/>
            </RadioGroup>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/mBtnUpdate"
        android:onClick="updateStok"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE STOK"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:textStyle="bold"/>
    <ProgressBar
        android:id="@+id/mProgress"
        android:layout_gravity="center"
        android:layout_width="48dp"
        android:layout_height="48dp"/>

</LinearLayout>
